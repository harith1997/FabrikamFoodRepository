<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FabrikamFood.UpdateReservation"> 
<ContentPage.Content>

  <StackLayout>
    <Label Text="Update Reservation" TextColor="#000000" VerticalOptions="Start" HorizontalOptions="Center"
       FontSize="20" />
    <StackLayout HeightRequest="280" VerticalOptions="Center" HorizontalOptions="Center" Margin="0, 50, 0, 0">
      <Label Text="name:" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#000000" Font="20" />
      <Entry Placeholder="enter name" />

      <Label Text="Phone number:" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#000000" Font="20" />
      <Entry Placeholder="enter phone number" />

    </StackLayout>


    <StackLayout HorizontalOptions="Start" VerticalOptions="End" Margin="0, 20, 0, 0">
      <Button Text="Save Changes" Margin="5, 0, 0, 0" />
      <Button Text="Cancel" />
    </StackLayout>



  </StackLayout>




</ContentPage.Content>


</ContentPage>